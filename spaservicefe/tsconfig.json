{
  "compilerOptions": {
    "target": "esnext", // Use modern JavaScript features
    "module": "esnext", // Use ES Modules
    "strict": true, // Enable strict type checking
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ (or "react" for older versions)
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      "@/*": ["src/*"] // Map '@' to the 'src' directory
    },
    "allowImportingTsExtensions": true, // Allow importing files with .ts/.tsx extensions
    "noEmit": true, // Prevent TypeScript from emitting compiled files
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Allow interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking for declaration files in node_modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in import paths
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"], // Include the entire "src" folder
  "exclude": ["node_modules", "dist"] // Exclude unnecessary folders
}
